---
import { Image } from "astro:assets";
---

<section id="contact" class="py-20 lg:py-32 bg-white">
    <div class="container px-4 mx-auto max-w-7xl">
        <div
            class="flex flex-col lg:flex-row justify-between gap-16 items-start"
        >
            <div class="flex-1 space-y-10">
                <div>
                    <span
                        class="px-4 py-1.5 rounded-full text-gray-900 border border-gray-300 text-sm font-medium bg-white"
                    >
                        Contact Us
                    </span>
                    <h2
                        class="text-5xl lg:text-7xl font-bold text-gray-900 mt-8 mb-4 leading-[1.1] tracking-tight"
                    >
                        Latâ€™s Collaborate Togather
                    </h2>
                </div>

                <div class="max-w-md">
                    <Image
                        src="/masjidul.png"
                        width={600}
                        height={600}
                        alt="Masjidul"
                        class="rounded-3xl w-full object-cover aspect-square"
                    />
                </div>

                <div class="space-y-8">
                    <p class="text-xl font-bold text-gray-900">
                        Directly Reach Out
                    </p>

                    <div class="space-y-1">
                        <p class="text-sm text-gray-500 font-medium italic">
                            Gmail
                        </p>
                        <p class="text-2xl font-bold text-gray-900">
                            hellomasjidul@gmail.com
                        </p>
                    </div>

                    <div class="space-y-1">
                        <p class="text-sm text-gray-500 font-medium italic">
                            WhatsApp
                        </p>
                        <p class="text-2xl font-bold text-gray-900">
                            +88 018 7518 9361
                        </p>
                    </div>
                </div>
            </div>

            <div
                class="w-full lg:max-w-2xl bg-[#1A1A1A] rounded-[40px] p-8 lg:p-12"
            >
                <form class="space-y-8">
                    <div class="space-y-3">
                        <label class="block text-gray-400 text-lg font-medium"
                            >Full Name</label
                        >
                        <input
                            type="text"
                            placeholder="Md. Masjidul islam shohan"
                            class="w-full px-6 py-4 bg-[#252525] border border-gray-700 rounded-2xl text-white placeholder-gray-500 outline-none focus:border-blue-500 transition-colors"
                        />
                    </div>

                    <div class="space-y-3">
                        <label class="block text-gray-400 text-lg font-medium"
                            >Email</label
                        >
                        <input
                            type="email"
                            placeholder="Md. Masjidul islam shohan"
                            class="w-full px-6 py-4 bg-[#252525] border border-gray-700 rounded-2xl text-white placeholder-gray-500 outline-none focus:border-blue-500 transition-colors"
                        />
                    </div>

                    <div class="space-y-3">
                        <label class="block text-gray-400 text-lg font-medium"
                            >WhatsApp</label
                        >
                        <select
                            class="w-full px-6 py-4 bg-[#252525] border border-gray-700 rounded-2xl text-gray-500 outline-none focus:border-blue-500 appearance-none"
                        >
                            <option>Select your service</option>
                        </select>
                    </div>

                    <div class="space-y-3">
                        <label class="block text-gray-400 text-lg font-medium"
                            >Current Website (Optional)</label
                        >
                        <input
                            type="text"
                            placeholder="Website.com"
                            class="w-full px-6 py-4 bg-[#252525] border border-gray-700 rounded-2xl text-white placeholder-gray-500 outline-none focus:border-blue-500 transition-colors"
                        />
                    </div>

                    <div class="space-y-4">
                        <label class="block text-white text-lg font-semibold"
                            >Project Budget</label
                        >
                        <div class="flex flex-wrap gap-3">
                            {
                                [
                                    "Less than $5k",
                                    "$5k - $10k",
                                    "More than $20k+",
                                ].map((budget) => (
                                    <button
                                        type="button"
                                        class="px-6 py-3 rounded-xl border border-gray-700 text-gray-400 text-sm font-medium hover:bg-gray-800 transition-all active:scale-95"
                                    >
                                        {budget}
                                    </button>
                                ))
                            }
                        </div>
                    </div>

                    <div class="space-y-3">
                        <label class="block text-gray-400 text-lg font-medium"
                            >Project Details</label
                        >
                        <textarea
                            rows="4"
                            placeholder="Tell us more about your idea"
                            class="w-full px-6 py-4 bg-[#252525] border border-gray-700 rounded-2xl text-white placeholder-gray-500 outline-none focus:border-blue-500 transition-colors resize-none"
                        ></textarea>
                    </div>

                    <button
                        type="submit"
                        class="w-full py-5 bg-[#3363FF] text-white text-xl font-bold rounded-full flex items-center justify-center gap-3 transition-transform active:scale-95 hover:bg-blue-600 shadow-xl shadow-blue-900/20"
                    >
                        Send Message
                        <svg
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2.5"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <line x1="7" y1="17" x2="17" y2="7"></line>
                            <polyline points="7 7 17 7 17 17"></polyline>
                        </svg>
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
