                        <div class="flex gap-3 mt-3">
                            <div class="w-14 h-14 rounded-full overflow-hidden my-auto">
                                <Image
                                    src={item.image}
                                    width={100}
                                    height={100}
                                    alt={item.name}
                                    class="w-full h-full object-cover transition-transform duration-300  group-hover:scale-[1.02] shadow-md"
                                />
                            </div>
                            <div class="my-auto">
                                <h2>{item.name}</h2>
                                <p class="text-sm text-[#9A9A9A]">
                                    {item.role}
                                </p>
                            </div>
                        </div>
                    </div>
                );
            })
        }
    </div>
</div>
